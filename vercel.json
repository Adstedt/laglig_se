{
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "crons": [
    {
      "path": "/api/cron/sync-sfs",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/sync-sfs-updates",
      "schedule": "30 4 * * *"
    },
    {
      "path": "/api/cron/sync-court-cases",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/cron/generate-summaries",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/prewarm-cache",
      "schedule": "30 5 * * *"
    },
    {
      "path": "/api/cron/warm-cache",
      "schedule": "45 5 * * *"
    },
    {
      "path": "/api/cron/retry-failed-pdfs",
      "schedule": "0 6 * * 0"
    },
    {
      "path": "/api/cron/cleanup-workspaces",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/notify-amendment-changes",
      "schedule": "0 7 * * *"
    }
  ]
}
